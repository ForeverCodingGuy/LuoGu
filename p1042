#include<bits/stdc++.h>

using namespace std;

const int N = 1e5;
char str[N];
int cur ;

void show(int n)
{
	int w = 0,l = 0;
	for(int i = 0;i < cur;i++)
	{
		if(str[i] == 'W') ++w;
		if(str[i] == 'L') ++l;
		if((w >= n || l >= n) && abs(w - l) >= 2)
		{
			cout<<w<<":"<<l<<endl;
			w = 0;
			l = 0;
		}
	}
    cout<<w<<":"<<l<<endl;
}

int main()
{
	char ch;
	while(cin>>ch && ch != 'E')
	{
		if(ch == 'W' || ch == 'L')
		{
			str[cur++] = ch; 
		} 
	}
	show(11);
	printf("\n");
	show(21);
}
