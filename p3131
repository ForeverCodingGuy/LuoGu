#include<bits/stdc++.h>

using namespace std;

const int N = 50010;

int first[7],last[7],s[N];

int n;

int main()
{
	cin>>n;
	
	for(int i = 1;i <= n;i++)
	{
		scanf("%d",&s[i]);
		s[i] = (s[i - 1] + s[i]) % 7;
	}
	
	for(int i = n;i >= 1;i--)
	{
		first[s[i]] = i;
	}
	
	first[0] = 0;
	
	for(int i = 1;i <= n;i++)
	{
		last[s[i]] = i;
	}
	
	int max_len = 0;
	for(int i = 0;i <= 6;i++)
	{
		max_len = max(last[i] - first[i],max_len);
	}
	
	cout<<max_len<<endl;
	
	return 0;
}
