#include<bits/stdc++.h>

using namespace std;

const int N = 510;

int a[N][N],s[N][N];

int main()
{
    int n,m;
    cin>>n>>m;
    
    int ans = 0;
    for(int i = 1;i <= n;i++)
    {
        for(int j = 1;j <= m;j++)
        {
            scanf("%d",&a[i][j]);
            if(a[i][j] == 1)
            {
                s[i][j] = min(min(s[i - 1][j],s[i][j - 1]),s[i - 1][j - 1]) + 1;
                ans = max(ans,s[i][j]);
            }
        }
    }
    
    cout<<ans<<endl;
    
    return 0;
}
