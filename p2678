#include<bits/stdc++.h>

using namespace std;

const int N = 50010;

int a[N],n,m,L;

bool check(int x)
{
	int last = 0,cnt = 0;
	
	for(int i = 0;i < n;i++)
	{
		if(a[i] - last < x) ++cnt;
		else last = a[i];
	}
	
	return cnt <= m;
}

int main()
{
	cin>>L>>n>>m;
	
	for(int i = 0;i < n;i++) scanf("%d",&a[i]);
	a[n] = L;
	
	int ll = 0,rr = L;
	while(ll <= rr)
  {
      int mid = ll + rr >> 1;
      if(check(mid)) ll = mid + 1;
      else rr = mid - 1;
  }
	
	cout<<ll - 1<<endl;
	
	return 0;
}
